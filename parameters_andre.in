# If some of the input variables are missing in this file, default values will be assumed. 

#
#Database address
#
database = /home/lessa/smodels-database #Give path to database directory

#
####Basic input
inputType = SLHA #SLHA or LHE for a slha or lhe input file
doInvisible = True #Set True if invisible compression should be performed during decomposition, False otherwise
doCompress = True #Set True if mass compression should be performed during decomposition, False otherwise
evaluateResults = True #Set True to evaluate results (compute experimental upper limits)
##########################################
####Output settings
#stdout
printGtop = True #Set True to print table of global topologies, False otherwise
printThEl = False #Set True to print table of elements after theoretical decomposition, False otherwise. Note that not all the elements appearing in this table are constrained by experiments.
printAnaEl = True #Set True to print table of elements constrained by available experimental analyses, False otherwise
printResults = True #Set True to print table of results, False otherwise
#output file
expandedSummary = True #Set True for a summary including all applicable analyses, False for only the most constraining analyses
describeTopo = True #Set True for a summary including all excluding results, False for only the strongest result
###########################################



####Advanced options:
#Decomposition
minmassgap = 5. #Give minimum mass gap (in GeV) for mass compression (only relevant if doCompress = True)

#SLHA Decomposition (only relevant if inputType = SLHA)
sigmacut = 0.01 #Give minimum cross section value [fb] considered in SLHA decomposition (only relevant for a SLHA input file)
computeXSecs = True #Set True if SModelS should compute cross-sections (only relevant for a SLHA input file)

#Cross-section calculation (only relevant if computeXSecs = True)
sqrts = 8. #Center of mass energy for computing cross-sections (in TeV)
nevts = 10000 #number of events for computing LO cross-sections with Pythia
useLO = False #Use LO cross sections in the input slha file to compute NLL with nllfast

####Results
maxcond = 0.2 #Maximum relative violation of conditions for valid results
analyses = all #Set all to use all analyses included in the database
#to use only specific analyses, give a list of the names, e.g.
#analyses = [SUS13008,SUS13013,ATLAS_CONF_2013_024,SUSY_2013_04]
