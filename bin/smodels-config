#!/usr/bin/python

""" super-simple script to query installation directory """

def installdir():
  import os, inspect
  ret=os.path.dirname ( inspect.getabsfile(installdir) )
  ret=ret.replace("bin","")
  print ret

def help():
  import sys
  print sys.argv[0]+": --help --installdir"
  print "--help: show this message"
  print "--installdir: print SModelS installation directory"
  sys.exit(0)

if __name__ == "__main__":
  import sys
  if len(sys.argv)<2: 
    help()
  for i in sys.argv[1:]:
    if i=="--help": help()
    if i=="--installdir": installdir()

